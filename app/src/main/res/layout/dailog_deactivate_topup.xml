<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dial_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/_20sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:lineSpacingExtra="@dimen/_10sdp"
            android:text="@string/deactivate_topup_msg"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/layout_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_btn"
                android:textAllCaps="true"
                android:drawableEnd="@drawable/ic_arrow_white"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:paddingTop="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_19sdp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_20sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:drawablePadding="@dimen/_15sdp"
                android:background="@drawable/login_background"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/layout_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes_btn"
                android:textAllCaps="true"
                android:drawableEnd="@drawable/ic_arrow_white"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:paddingTop="@dimen/_10sdp"
                android:paddingStart="@dimen/_19sdp"
                android:paddingEnd="@dimen/_19sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:drawablePadding="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/login_background"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>