<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">
    <include layout="@layout/no_internet"/>
    <include layout="@layout/toolbar_head"/>
    <RelativeLayout
        android:id="@+id/view_top_ups"

        android:layout_below="@+id/toolbar_head"
        android:layout_width="match_parent"


        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout_head_tabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/layout_oneTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_oneTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="One Time Top-up"
                    android:fontFamily="@font/helvetica_neu_bold"
                    android:textSize="18sp"
                    android:textColor="@color/not_selected_color"/>

                <View
                    android:id="@+id/view_oneTime"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/colorPrimaryDark"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_recurring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_20sdp">
                <TextView
                    android:id="@+id/txt_recurring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recurring Top-up"

                    android:fontFamily="@font/helvetica_neu_bold"
                    android:textSize="18sp"
                    android:textColor="@color/not_selected_color"/>
                <View
                    android:id="@+id/view_recurring"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/colorPrimaryDark"/>

            </LinearLayout>

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/view_topups"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_above="@+id/layout_buyTopup"
            android:layout_below="@+id/layout_head_tabs"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:indeterminateTint="@color/back_color"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:id="@+id/layout_buyTopup"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:background="#191919"
            android:visibility="visible"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="@dimen/_15sdp">

            <ImageView
                android:id="@+id/img_logout"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/topup" />

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Buy Topup"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
