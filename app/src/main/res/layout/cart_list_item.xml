<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:visibility="gone"
            android:textColor="@color/white1"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:text="Pull down to "/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:textAlignment="center"
            android:paddingEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/back_color"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/edit"/>
    </RelativeLayout>

    <com.zerobranch.layout.SwipeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe_layout"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:draggedItem="@id/view_foreground"
        app:rightItem="@id/right_view"
        app:swipeDirection="left">


        <LinearLayout
            android:id="@+id/right_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"

            android:background="@android:color/black"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:visibility="visible"
                app:cardBackgroundColor="@color/notbg2"

                app:cardCornerRadius="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivArchived"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="match_parent"
                        android:background="#E6E6E6"
                        android:padding="@dimen/_15sdp"
                        android:visibility="gone"
                        android:src="@drawable/ic_archive_red" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivDelete"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:padding="@dimen/_15sdp"
                        android:src="@drawable/ic_delete_red" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/view_foreground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp">


            <androidx.cardview.widget.CardView
                android:id="@+id/drag_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="visible"
                app:cardBackgroundColor="#A9A9A9"
                app:cardCornerRadius="@dimen/_15sdp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/cb_compare"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:padding="@dimen/_6sdp"
                        android:visibility="gone" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivHolder"
                        android:background="@drawable/not_round_white_background"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_margin="@dimen/_5sdp"

                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:src="@drawable/ic_megaphone"
                        android:padding="@dimen/_3sdp"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_9sdp"

                        android:visibility="visible">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Due outstanding amount"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"

                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textDec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="Due outstanding amoun"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>
                </RelativeLayout>


            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </com.zerobranch.layout.SwipeLayout>
</RelativeLayout>





