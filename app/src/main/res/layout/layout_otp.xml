<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    tools:ignore="ContentDescription"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_2sdp"
        android:layout_margin="@dimen/_20sdp"
        app:srcCompat="@drawable/ic_expand_button" />
    <RelativeLayout
        android:layout_width="match_parent"
      android:layout_margin="@dimen/_20sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_phone"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">
<androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/txt_phone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:layout_gravity="center_horizontal"
    android:textAlignment="center"
    android:fontFamily="@font/helveticaneue_medium"
    android:text="@string/otp_has_been_sent_to"
    android:textColor="@color/white" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textAlignment="center"
               android:layout_gravity="center_horizontal"
                android:text="@string/txt_edit"
                android:textColor="@color/white"
                android:fontFamily="@font/helvetica_neu_bold"
                android:id="@+id/txt_edit"/>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="323dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/layout_phone"
            android:id="@+id/layout_mobile"
            android:layout_marginTop="@dimen/_40sdp"
            android:background="#ffffff"
            app:cardCornerRadius="@dimen/_15sdp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
            <LinearLayout
                android:padding="@dimen/_20sdp"
                android:id="@+id/view_username"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_otp"
                    android:layout_gravity="center"
                    android:textColor="@color/login_txt"
                    android:textSize="16sp"
                    android:textAlignment="center"/>

                <com.spectra.consumer.Activities.PinEntryEditText2
                    android:id="@+id/txt_pin_entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:cursorVisible="false"
                    android:digits="1234567890*"
                    android:focusable="true"
                    android:inputType="number"
                    android:maxLength="4"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textIsSelectable="false"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:pinAnimationType="none"
                    app:text_color="@color/colorPrimaryDark"
                    app:text_color_entered="@color/colorPrimaryDark" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/layout_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_verify"
                    android:textAllCaps="true"
                    android:drawableEnd="@drawable/ic_arrow_white"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                   android:layout_marginTop="@dimen/_25sdp"
                    android:textColor="@color/white"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingStart="@dimen/_19sdp"
                    android:paddingEnd="@dimen/_19sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:drawablePadding="@dimen/_20sdp"
                    android:background="@drawable/login_background"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_get_the_code"
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/login_txt"
                        android:text="@string/get_the_code"/>

                  <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_resend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/txt_get_the_code"
                    android:fontFamily="@font/helveticaneue_medium"
                    android:text="@string/txt_resend"
                    android:textColor="@color/resend_txt_color"
                    android:textSize="18sp" />
                </RelativeLayout>

            </LinearLayout>
            <ProgressBar
                android:layout_width="wrap_content"
                android:id="@+id/progress"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:indeterminateTint="@color/back_color"
                android:layout_height="wrap_content"/>
</RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>