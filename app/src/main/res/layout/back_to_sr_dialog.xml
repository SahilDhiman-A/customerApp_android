<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dial_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/_20sdp"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_18sdp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:lineSpacingExtra="@dimen/_6sdp"
            android:textAlignment="center"
            android:text=""/>
    <TextView
        android:id="@+id/txt_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_14sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:lineSpacingExtra="@dimen/_6sdp"
        android:textAlignment="center"
        android:text=""/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/back_to_sr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_to_sr"
            android:textAllCaps="true"
            android:drawableEnd="@drawable/ic_expand_button"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
           android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textColor="@color/white"
            android:paddingTop="@dimen/_10sdp"
            android:paddingStart="@dimen/_19sdp"
            android:paddingEnd="@dimen/_19sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:drawablePadding="@dimen/_15sdp"
            android:background="@drawable/login_background"
            />
    </LinearLayout>

</LinearLayout>