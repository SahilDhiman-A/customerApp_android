<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:splitMotionEvents="true"
    android:id="@+id/transition_container"
    android:animationCache="true"
    android:background="@android:color/black">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:animateLayoutChanges="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_login_layout_parent">
                <RelativeLayout
                    android:id="@+id/img_login_layout"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:visibility="visible"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_login"
                        android:layout_width="166dp"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/ic_group_191"
                        android:layout_height="201dp"
                        />

                    <TextView
                        android:id="@+id/txt_make_life_better"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/helveticaneue_medium"
                        android:gravity="center_horizontal"
                        android:layout_below="@+id/img_login"
                        android:layout_centerHorizontal="true"
                        android:textSize="21sp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:text="@string/txt_make_life_better" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/img_login_layout_short"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_login_short"
                        android:layout_width="98dp"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/ic_group_191_short"
                        android:layout_height="119dp"
                        />
                    <TextView
                        android:id="@+id/txt_make_life_better_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/helveticaneue_medium"
                        android:layout_below="@+id/img_login_short"
                        android:layout_centerHorizontal="true"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:text="@string/txt_make_life_better" />
                </RelativeLayout>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/layout_cardview"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_below="@+id/img_login_layout_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/layout_mobile"
                    android:layout_marginTop="@dimen/_90sdp"
                    android:background="#ffffff"
                    app:cardCornerRadius="@dimen/_15sdp"
                    >
                    <LinearLayout
                        android:padding="@dimen/_20sdp"
                        android:id="@+id/view_mobile"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">


                        <TextView
                            android:id="@+id/txt_enter_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_enter_mobile_number"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:textSize="16sp"
                            android:textColor="#3D3D3D"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:textAlignment="center"/>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp">
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_toStartOf="@+id/btn_login_layout"
                                android:layout_height="wrap_content">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_mobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"
                                    android:hint="@string/txt_mobile_number"
                                    android:maxLength="10"
                                    android:textSize="18sp"
                                    android:singleLine="true"
                                    android:inputType="number|textFilter"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>
                            <RelativeLayout
                                android:id="@+id/btn_login_layout"
                                android:layout_width="60dp"
                                android:layout_height="@dimen/_60sdp"
                                android:visibility="gone"
                                android:layout_alignParentEnd="true"
                                android:background="@color/white">
                                <com.google.android.material.floatingactionbutton.FloatingActionButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/btn_login"
                                    android:backgroundTint="@color/back_color"
                                    app:srcCompat="@drawable/ic_arrow_white"
                                    />
                            </RelativeLayout>

                        </RelativeLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/layout_mobile_username"
                    android:background="#ffffff"
                    android:layout_marginTop="@dimen/_30sdp"
                    app:cardCornerRadius="@dimen/_15sdp"
                    >
                    <LinearLayout
                        android:padding="@dimen/_18sdp"
                        android:id="@+id/view_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <RelativeLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/layout_error"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/_15sdp"
                                android:paddingEnd="@dimen/_15sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/error_background">
                                <TextView
                                    android:id="@+id/txt_error"
                                    android:layout_width="0dp"
                                    android:layout_weight="8"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="@dimen/_10sdp"
                                    android:fontFamily="@font/helvetica_neu_bold"
                                    android:textColor="@color/white"
                                    />
                                <ImageView
                                    android:id="@+id/img_cross"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="22sp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    app:srcCompat="@drawable/ic_cross"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/txt_enter_username"
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/helveticaneue_medium"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="@string/enter_username_password"
                                android:textSize="16sp"
                                android:textColor="#3D3D3D"
                                android:textAlignment="center"/>
                        </RelativeLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_username"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textSize="18sp"
                                android:maxEms="20"
                                android:maxLength="20"
                                android:layout_centerHorizontal="true"
                                android:hint="@string/txt_username"
                                android:background="@null"
                                android:singleLine="true"
                                android:backgroundTint="@null"
                                />
                            <View
                                android:id="@+id/view_name"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/colorAccent"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp">
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"
                                    android:hint="@string/txt_password"
                                    android:background="@null"
                                    android:backgroundTint="@null"
                                    android:maxLength="20"
                                    android:textSize="18sp"
                                    android:maxEms="20"

                                    android:singleLine="true"
                                    android:inputType="textPassword"
                                    />
                                <View
                                    android:id="@+id/view_pass"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:background="@color/colorAccent"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textSize="14sp"
                                android:layout_centerVertical="true"
                                android:text="@string/txt_show"
                                android:fontFamily="@font/helvetica_neu_bold"
                                android:textColor="#F36F69"
                                android:id="@+id/txt_show_password"/>
                        </RelativeLayout>



                        <RelativeLayout
                            android:id="@+id/btn_login_username_layout"
                            android:layout_width="235dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@drawable/login_background_error">
                            <TextView
                                android:id="@+id/txt_login"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_login"
                                android:textSize="18sp"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_centerVertical="true"
                                />
                            <ImageView
                                android:layout_width="21dp"
                                android:layout_height="17sp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_20sdp"
                                app:srcCompat="@drawable/ic_arrow_white"/>
                        </RelativeLayout>


                        <TextView
                            android:id="@+id/txt_forgot_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helveticaneue_medium"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:text="@string/txt_forgot_password"
                            android:textSize="16sp"
                            android:textColor="@color/txt_forgot"/>

                    </LinearLayout>




                </androidx.cardview.widget.CardView>
            </RelativeLayout>



            <RelativeLayout
                android:layout_below="@+id/layout_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="@dimen/_35sdp">
                <TextView
                    android:id="@+id/txt_login_via"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:text="@string/login_via"
                    />

                <TextView
                  android:id="@+id/txt_login_via_username"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginStart="@dimen/_5sdp"
                  android:layout_toEndOf="@+id/txt_login_via"
                  android:text="@string/txt_login_via_username"
                  android:textColor="@color/white"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:visibility="visible" />
            </RelativeLayout>
            <TextView
                android:id="@+id/txt_login_via_mobile"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_30sdp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="@string/txt_login_via_mobile"
                android:layout_below="@+id/layout_cardview"/>

        </RelativeLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/back_color"
        android:layout_centerInParent="true"/>
</RelativeLayout>