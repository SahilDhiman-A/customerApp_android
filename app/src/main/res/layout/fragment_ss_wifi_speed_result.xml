<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:orientation="vertical"
        tools:ignore="ContentDescription">

        <androidx.appcompat.widget.Toolbar
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:visibility="gone"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/toolbar_head">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    app:srcCompat="@drawable/ic_expand_button"/>
                <TextView
                    android:id="@+id/txt_head"
                    android:layout_toEndOf="@+id/img_back"
                    android:textAlignment="center"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/spectra_regular"
                    android:foregroundGravity="center_vertical"/>
                <TextView
                    android:id="@+id/txt_share"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:text="@string/share"
                    android:textSize="18sp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/layout_wifi_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:layout_margin="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_15sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_15sdp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/img_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_info"
                        android:layout_gravity="right"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"/>

                    <LinearLayout
                        android:id="@+id/layWifiBand"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >

                        <TextView
                            android:id="@+id/tv_ssid"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:fontFamily="@font/helvetica_neu_bold"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/color_text_grey"
                            android:textSize="@dimen/sub_header_text" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_band"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:textAllCaps="true"
                            android:gravity="center"
                            android:fontFamily="@font/helvetica_neu_bold"
                            android:text="5GHz"
                            android:textSize="@dimen/btn_text"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_gravity="center_vertical"
                            android:visibility="visible"
                            android:textColor="@color/white"
                            android:paddingStart="@dimen/_19sdp"
                            android:paddingEnd="@dimen/_19sdp"
                            android:background="@drawable/band_background"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_strength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/signal_strength"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/color_text_grey"
                        android:textSize="@dimen/sub_header_text" />

                    <TextView
                        android:id="@+id/tv_strength_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/signal_strength_excellent"
                        android:fontFamily="@font/helvetica_neu_bold"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/timer_color"
                        android:textSize="@dimen/network_strength_size" />

                    <!--   <view
                           android:layout_width="match_parent"
                           android:layout_height=".5dp"
                           android:layout_marginTop="@dimen/_10sdp"
                           android:background="@color/color_text_grey"
                           />-->

                    <TextView
                        android:id="@+id/tv_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:visibility="visible"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/color_text_grey"
                        android:textSize="@dimen/sub_header_text" />

                    <TextView
                        android:id="@+id/tv_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="00:00"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:visibility="visible"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/timer_color"
                        android:textSize="@dimen/timer_text_size" />

                    <LinearLayout
                        android:id="@+id/layspeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible"
                        >

                        <LinearLayout
                            android:id="@+id/laySpeedTest"
                            android:layout_width="@dimen/_230sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/band_background"
                            >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_2sdp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                >
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/iv_speed_meter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_centerVertical="true"
                                    app:srcCompat="@drawable/ic_speedometer_color"
                                    android:layout_gravity="center_vertical"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/iv_speed_meter"
                                    android:background="@color/transparent"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:fontFamily="@font/helvetica_neu_bold"
                                    android:text="@string/speed_test_msg"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/btn_speed_text"
                                    android:gravity="left|center_vertical"
                                    />

                            </RelativeLayout>

                        </LinearLayout>


                        <TextView
                            android:id="@+id/tvDownloadSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:text="Enter Download Speed"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/color_text_grey"
                            android:textSize="@dimen/sub_header_text" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_centerHorizontal="true">

                            <RelativeLayout
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <EditText
                                  android:id="@+id/ed_mbps"
                                  android:layout_width="@dimen/_50sdp"
                                  android:layout_height="match_parent"
                                  android:layout_marginBottom="2dp"
                                  android:background="@color/transparent"
                                  android:digits="0123456789"
                                  android:gravity="center"
                                  android:imeOptions="actionDone"
                                  android:inputType="number"
                                  android:maxLength="3"
                                  android:maxLines="1"
                                  android:textColor="@color/timer_color" />

                                <View
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="1dp"
                                    android:layout_alignParentBottom="true"
                                    android:background="@color/color_text_grey"/>
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:textSize="@dimen/sub_header_text"
                                android:textColor="@color/black"
                                android:text="Mbps"
                                android:layout_gravity="center_horizontal"/>

                        </LinearLayout>

                        <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginTop="@dimen/_10sdp"
                          android:orientation="vertical">

                            <TextView
                              android:layout_width="@dimen/_150sdp"
                              android:layout_height="match_parent"
                              android:layout_gravity="center_horizontal"
                              android:gravity="center"
                              android:text="Best time to contact:"
                              android:textColor="@color/black"
                              android:textSize="@dimen/sub_header_text" />

                            <EditText
                              android:id="@+id/et_remark"
                              android:layout_width="match_parent"
                              android:layout_height="@dimen/_60sdp"
                              android:gravity="top|left"
                              android:padding="@dimen/_10sdp"
                              android:background="@drawable/remark_background"
                              android:layout_marginStart="@dimen/_10sdp"
                              android:layout_marginEnd="@dimen/_10sdp"
                              android:maxLength="250" />

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvContinue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/continue_btn"
                            android:textAllCaps="true"
                            android:drawableEnd="@drawable/ic_arrow_white"
                            android:textSize="@dimen/btn_text"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:visibility="visible"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:textColor="@color/white"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingStart="@dimen/_19sdp"
                            android:paddingEnd="@dimen/_19sdp"
                            android:paddingBottom="@dimen/_8sdp"
                            android:drawablePadding="@dimen/_15sdp"
                            android:background="@drawable/login_background"
                            />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fd_ss_box_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/black_transparent"
            android:visibility="gone"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:background="@color/black"
                android:padding="@dimen/_5sdp"
                android:visibility="visible"
                android:layout_margin="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_15sdp">

                <TextView
                    android:id="@+id/txt_cross"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center"
                    android:text="[x]"
                    android:fontFamily="@font/helveticaneue_medium"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="right|top"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_alignParentLeft="true"
                        >
                        <ImageView
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:src="@drawable/ont"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sub_header_text"
                            android:text="@string/ont"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_alignParentRight="true"
                        >
                        <ImageView
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:src="@drawable/img_switch"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sub_header_text"
                            android:text="@string/switch_text"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        >
                        <ImageView
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:src="@drawable/img_router"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sub_header_text"
                            android:text="@string/wifi_router"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/pro2"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:indeterminateTint="@color/back_color"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</layout>