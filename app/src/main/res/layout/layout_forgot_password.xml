<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        app:srcCompat="@drawable/ic_expand_button"
        tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txt_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_40sdp"
            android:text="@string/txt_forgot_password"
          android:textSize="18sp"
            android:textColor="@color/white"/>

    <RelativeLayout
        android:id="@+id/layout_cardview"
        android:layout_width="wrap_content"
        android:layout_below="@+id/txt_forgot_password"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/layout_mobile"
            android:background="#ffffff"
            android:layout_margin="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_15sdp">
            <LinearLayout
                android:padding="@dimen/_20sdp"
                android:id="@+id/view_mobile"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <LinearLayout
                    android:id="@+id/layout_head_tabs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/layout_select_canid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_can"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/can_id"
                            android:textAllCaps="true"
                            android:textSize="16sp"
                            android:textColor="@color/not_selected_color"/>
                        <View
                            android:id="@+id/view_can"
                            android:layout_width="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/colorPrimaryDark"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_select_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/_20sdp">
                        <TextView
                            android:id="@+id/txt_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_username"
                            android:textAllCaps="true"
                            android:textSize="16sp"
                            android:textColor="@color/not_selected_color"/>
                        <View
                            android:id="@+id/view_username"
                            android:layout_width="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/colorPrimaryDark"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_enter_can_username"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_enter_registered_canid"
                    android:textSize="14sp"
                    android:textColor="@color/txt_forgot"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textAlignment="center"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_can_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_canid"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:hint="@string/can_id"
                            android:textSize="18sp"
                            android:maxLength="20"
                            android:singleLine="true"
                            android:layout_centerHorizontal="true"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_username"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_username"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:hint="@string/txt_username"
                            android:maxLength="20"
                            android:textSize="18sp"
                            android:singleLine="true"
                            android:layout_centerHorizontal="true"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <ImageView
                        android:id="@+id/img_question"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:visibility="visible"
                        android:padding="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/ic_faq"
                        tools:ignore="ContentDescription">

                    </ImageView>

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/layout_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_submit"
                    android:textAllCaps="true"
                    android:drawableEnd="@drawable/ic_arrow_white"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/_30sdp"
                    android:textColor="@color/white"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingStart="@dimen/_19sdp"
                    android:paddingEnd="@dimen/_19sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:drawablePadding="@dimen/_15sdp"
                    android:background="@drawable/login_background"
                    />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/back_color"
            android:layout_centerInParent="true"/>



</RelativeLayout>