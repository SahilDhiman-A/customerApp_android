<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorPrimaryDark"
  android:orientation="vertical">

  <include layout="@layout/toolbar_head" />

  <androidx.cardview.widget.CardView
    android:id="@+id/layout_plan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_20sdp"
    android:background="#ffffff"
    android:visibility="visible"
    app:cardCornerRadius="@dimen/_15sdp">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/inlCompanyName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/_10sdp"
          android:visibility="gone">

          <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCompanyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_10sdp"
            android:enabled="false"
            android:hint="@string/companyName"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="@color/colorPrimaryDark" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/inlUserName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/_10sdp">

          <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_10sdp"
            android:enabled="false"
            android:hint="Username"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="@color/colorPrimaryDark" />

        </com.google.android.material.textfield.TextInputLayout>


        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/_10sdp"
          android:layout_marginBottom="@dimen/_10sdp">

          <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inlMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/etMobileNumber"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/_10sdp"
              android:enabled="false"
              android:hint="@string/mobile_number"
              android:imeOptions="actionNext"
              android:inputType="number"

              android:maxLength="10"
              android:textColor="@color/colorPrimaryDark" />

          </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/tvEditMobileNumber"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_gravity="center"
              android:padding="@dimen/_10sdp"
              android:text="@string/txt_edit"
              android:textAllCaps="true"
              android:textColor="@color/back_color"
              android:textSize="@dimen/_12sdp" />
        </RelativeLayout>

        <RelativeLayout
          android:layout_width="match_parent"

          android:layout_height="wrap_content">

          <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inlEmailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/etEmailId"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/_10sdp"
              android:enabled="false"
              android:hint="Email Id"

              android:imeOptions="actionNext"
              android:inputType="textEmailAddress"
              android:textColor="@color/colorPrimaryDark" />

          </com.google.android.material.textfield.TextInputLayout>

          <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEditEmailId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/txt_edit"
            android:textAllCaps="true"
            android:textColor="@color/back_color"
            android:textSize="@dimen/_12sdp" />
        </RelativeLayout>

        <RelativeLayout
          android:id="@+id/rlGSTN"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/_10sdp">

          <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inlGSTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/etGSTN"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/_10sdp"
              android:enabled="false"
              android:hint="@string/gst"
              android:imeOptions="actionNext"
              android:inputType="text"

              android:maxLength="15"
              android:textColor="@color/colorPrimaryDark" />

          </com.google.android.material.textfield.TextInputLayout>

          <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEditGSTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/txt_edit"
            android:textAllCaps="true"
            android:textColor="@color/back_color"
            android:textSize="@dimen/_12sdp" />
        </RelativeLayout>

        <RelativeLayout
          android:id="@+id/rlTAN"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/_10sdp">

          <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inlTAN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/etTAN"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/_10sdp"
              android:enabled="false"
              android:hint="@string/tan"
              android:imeOptions="actionDone"
              android:inputType="text"
              android:maxLength="10"
              android:textColor="@color/colorPrimaryDark" />

          </com.google.android.material.textfield.TextInputLayout>

          <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEditTAN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/txt_edit"
            android:textAllCaps="true"
            android:textColor="@color/back_color"
            android:textSize="@dimen/_12sdp" />
        </RelativeLayout>
      </LinearLayout>

      <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/back_color"
        android:visibility="gone" />
    </RelativeLayout>
  </androidx.cardview.widget.CardView>

</LinearLayout>