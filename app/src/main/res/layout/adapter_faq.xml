<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_15sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_50sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/expandedListheader"
                android:layout_width="0dp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_19sdp"
                android:fontFamily="@font/helvetica_bold"
                android:gravity="center_vertical"
                android:text="General"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14sp"

                app:layout_constraintEnd_toStartOf="@+id/controll_list"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="General" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/controll_list"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_margin="@dimen/_13sdp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_add"
                app:layout_constraintBottom_toBottomOf="@+id/expandedListheader"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/expandedListheader" />

            <View
                android:id="@+id/sparator"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@color/sparator"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/controll_list"
                app:layout_constraintStart_toStartOf="@+id/expandedListheader"
                app:layout_constraintTop_toBottomOf="@+id/controll_list" />

            <com.spectra.consumer.customView.VideoPlayerRecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sparator" />


            <!--                <com.spectra.consumer.customView.NonScrollExpandableListView-->
            <!--                    android:id="@+id/expendedlistview_faq"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_marginTop="@dimen/_10sdp"-->
            <!--                    android:paddingBottom="@dimen/_8sdp"-->
            <!--                    android:nestedScrollingEnabled="true"-->
            <!--                    android:orientation="vertical"-->
            <!--                    android:visibility="gone"-->
            <!--                    app:layout_constraintBottom_toBottomOf="parent"-->
            <!--                    app:layout_constraintEnd_toEndOf="parent"-->
            <!--                    app:layout_constraintStart_toStartOf="parent"-->
            <!--                    app:layout_constraintTop_toBottomOf="@+id/sparator"-->
            <!--                    tools:listfooter="@layout/list_item"-->
            <!--                    tools:listheader="@layout/list_group" />-->


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</layout>

