<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:orientation="vertical"
        tools:ignore="ContentDescription">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/layout_paynow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:layout_margin="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="left"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_gravity="left"
                    >

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/pay_now_msg"
                        android:textColor="@color/color_text_grey"
                        android:textSize="@dimen/sub_header_text" />

                    <RelativeLayout
                        android:id="@+id/layRouter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        >

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="899"
                            android:textSize="@dimen/header_text"
                            android:textColor="@color/color_text_grey"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_pay_now"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pay_now_btn"
                            android:textAllCaps="true"
                            android:drawableEnd="@drawable/ic_arrow_white"
                            android:textSize="@dimen/btn_text"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:visibility="visible"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:textColor="@color/white"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingStart="@dimen/_19sdp"
                            android:paddingEnd="@dimen/_19sdp"
                            android:paddingBottom="@dimen/_8sdp"
                            android:drawablePadding="@dimen/_15sdp"
                            android:background="@drawable/login_background"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_pay_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="@dimen/normal_text"
                android:text="@string/pay_now_btm_msg"
                android:layout_below="@+id/layout_paynow"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginBottom="@dimen/_35sdp"
                android:layout_marginRight="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_35sdp"
                />

        </RelativeLayout>
        <ProgressBar
            android:id="@+id/pro2"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:indeterminateTint="@color/back_color"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</layout>