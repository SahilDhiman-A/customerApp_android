<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="373dp"
    android:background="@drawable/dial_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/_15sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/_14sdp"
                android:textColor="@android:color/black"
                android:text="Remove"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/color_text_gary"
                android:text="Do you realy want to Remove?"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">
                <RelativeLayout
                    android:id="@+id/rlCancel"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:padding="@dimen/_7sdp"
                    android:background="@drawable/login_background">
                    <TextView
                        android:id="@+id/txt_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="16sp"
                        android:layout_toEndOf="@+id/txt_view"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/ic_arrow_white"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlRemove"
                    android:layout_width="117dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:padding="@dimen/_7sdp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/login_background">
                    <TextView
                        android:id="@+id/txt_download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remove"
                        android:textSize="14sp"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="16sp"
                        android:layout_toEndOf="@+id/txt_download"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"

                        app:srcCompat="@drawable/ic_arrow_white"/>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
</LinearLayout>