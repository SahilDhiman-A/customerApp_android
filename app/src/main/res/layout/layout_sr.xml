<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <RelativeLayout
        android:id="@+id/layout_view"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/service_requests"
        android:fontFamily="@font/spectra_regular"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:textSize="24sp"
        android:textColor="@color/white"/>
    <RelativeLayout
        android:id="@+id/layout_search"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_24sdp"
        android:layout_marginRight="@dimen/_24sdp"
        android:layout_below="@+id/txt_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textSize="14sp"
            android:hint="@string/search_by_sr"
            android:background="@null"
            android:singleLine="true"
            android:maxLength="30"
            android:backgroundTint="@null"
            android:textColor="@color/white"
            android:layout_toStartOf="@+id/img_done"
            android:drawablePadding="@dimen/_10sdp"
            android:textColorHint="@color/colorAccent"
            android:layout_marginEnd="@dimen/_4sdp"
            android:drawableStart="@drawable/ic_search"
            android:padding="@dimen/_10sdp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_done"
            android:visibility="gone"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/arraow_color"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_cross"
            android:visibility="gone"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_cross"/>
        <View
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_below="@+id/search"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_height="@dimen/_1sdp"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/view_sr_list"
        android:layout_below="@+id/layout_search"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:paddingBottom="@dimen/_14sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/layout_raise_new_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@string/raise_new_request"
            android:textAllCaps="true"
            android:drawableEnd="@drawable/ic_arrow_white"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:paddingTop="@dimen/_10sdp"
            android:paddingStart="@dimen/_19sdp"
            android:paddingEnd="@dimen/_19sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_40sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:drawablePadding="@dimen/_15sdp"
            android:background="@drawable/login_background"
            />
    <LinearLayout
        android:id="@+id/layout_no_request"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_60sdp"
            app:srcCompat="@drawable/ic_smile"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_60sdp" />
        <TextView
            android:id="@+id/txt_no_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helveticaneue"
            android:textSize="20sp"
            android:textAlignment="center"
            android:padding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:text="@string/no_sr"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/raise_new_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/raise_new_request"
            android:textAllCaps="true"
            android:drawableEnd="@drawable/ic_arrow_white"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:paddingTop="@dimen/_10sdp"
            android:paddingStart="@dimen/_19sdp"
            android:paddingEnd="@dimen/_19sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/_15sdp"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/login_background"
            />
    </LinearLayout>
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/back_color"
        android:layout_centerInParent="true"/>
</RelativeLayout>