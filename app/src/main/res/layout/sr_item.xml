<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/llmain"
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/_13sdp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/layout_mobile"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#ffffff"
        app:cardCornerRadius="@dimen/_15sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/_15sdp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sr_number"/>
                    <TextView
                        android:id="@+id/txt_sr_number"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_50sdp"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true">
                    <TextView
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/txt_status"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_height="22dp"
                       />
                </LinearLayout>

            </RelativeLayout>
            <TextView
                android:textSize="12sp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/problem_type"/>
            <TextView
                android:id="@+id/txt_problem_type"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:text=""/>
            <TextView
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:text="@string/problem_sub_type"/>
            <TextView
                android:id="@+id/txt_prob_sub_type"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:text=""/>
            <TextView
                android:id="@+id/txt_expected_resolution"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/expected_resolution_time"/>
            <TextView
                android:id="@+id/txt_expected_resolution_time"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:text=""/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSeeMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Know More"
                android:textAllCaps="true"
                android:drawableEnd="@drawable/ic_arrow_white"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textColor="@color/white"
                android:paddingTop="@dimen/_10sdp"
                android:paddingStart="@dimen/_19sdp"
                android:paddingEnd="@dimen/_19sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:backgroundTint="@color/cancel_background_color"
                android:drawablePadding="@dimen/_65sdp"
                android:background="@drawable/login_background"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>