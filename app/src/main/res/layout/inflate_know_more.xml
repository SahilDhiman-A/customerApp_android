<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_know_more"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black_transparent"
    android:visibility="gone"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginBottom="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_18sdp"
        android:layout_marginRight="@dimen/_18sdp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/black"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:visibility="visible"
        app:cardCornerRadius="@dimen/_10sdp"
        >

        <TextView
            android:id="@+id/txt_cross"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:gravity="center"
            android:text="[x]"
            android:fontFamily="@font/helveticaneue_medium"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="right|top"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:paddingLeft="@dimen/_2sdp"
            android:paddingRight="@dimen/_2sdp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txt_plan_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/plan_details"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center_horizontal|top"
                android:textColor="@color/color_text_grey"
                android:textSize="@dimen/header_text"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_alignParentTop="true"/>


            <TextView
                android:id="@+id/txt_plan_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/know_more_msg"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center_horizontal|top"
                android:textColor="@color/color_text_grey"
                android:textSize="@dimen/sub_header_text"
                android:layout_alignParentTop="true"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_know_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
