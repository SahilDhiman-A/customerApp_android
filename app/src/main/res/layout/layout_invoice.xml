<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:ignore="ContentDescription">
    <WebView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/webview"
        />
    <TextView
        android:id="@+id/txt_payments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payments"
        android:fontFamily="@font/spectra_regular"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:textSize="24sp"
        android:textColor="@color/white"/>
    <LinearLayout
        android:id="@+id/layout_head_tabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/layout_select_invoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_invoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invoices"
                android:fontFamily="@font/helvetica_neu_bold"
                android:textSize="18sp"
                android:textAllCaps="true"
                android:textColor="@color/not_selected_color"/>
            <View
                android:id="@+id/view_invoice"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorPrimaryDark"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_select_ledger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_20sdp">
            <TextView
                android:id="@+id/txt_transaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transactions"
                android:textAllCaps="true"
                android:fontFamily="@font/helvetica_neu_bold"
                android:textSize="18sp"
                android:textColor="@color/not_selected_color"/>
            <View
                android:id="@+id/view_ledger"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorPrimaryDark"/>

        </LinearLayout>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_20sdp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:id="@+id/layout_mobile"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_15sdp">
<RelativeLayout
    android:id="@+id/layout_pay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/_10sdp"
      android:layout_marginTop="@dimen/_10sdp"
      android:layout_marginEnd="@dimen/_10sdp"
      android:layout_marginBottom="@dimen/_10sdp"
      android:layout_toStartOf="@+id/btn_pay_now"
      android:orientation="vertical"
      android:padding="@dimen/_4sdp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/total_outstanding_amount"
          android:textSize="12sp" />

        <TextView
          android:id="@+id/txt_outstanding_amount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/_5sdp"
          android:text=""
          android:textColor="@color/colorPrimaryDark"
          android:textSize="18sp" />

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/_5sdp"
          android:orientation="horizontal">

            <TextView
              android:id="@+id/txt_due"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/due_on" />

            <TextView
              android:id="@+id/due_date"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/_3sdp"
              android:text=""
              android:textColor="@color/back_color"
              android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/txt_pay"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:layout_marginStart="@dimen/_10sdp"
      android:layout_marginEnd="@dimen/_20sdp"
      android:background="@drawable/login_background"
      android:drawableEnd="@drawable/ic_arrow_white"
      android:drawablePadding="@dimen/_10sdp"
      android:fontFamily="@font/helvetica_neu_bold"
      android:paddingStart="@dimen/_14sdp"
      android:paddingTop="@dimen/_7sdp"
      android:paddingEnd="@dimen/_14sdp"
      android:paddingBottom="@dimen/_7sdp"
      android:text="@string/pay_now"
      android:textColor="@color/white"
      android:textSize="@dimen/_14sdp" />
</RelativeLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_below="@+id/layout_mobile"
        android:id="@+id/layout_select_date"
        android:layout_width="match_parent"
        android:background="#363636"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_height="@dimen/_60sdp">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_20sdp"
    android:padding="@dimen/_2sdp"
    android:id="@+id/from_date_layout"
    android:layout_centerVertical="true"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:text="@string/from"/>
    <RelativeLayout
        android:id="@+id/select_from_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp">
        <TextView
            android:id="@+id/txt_from_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="@string/select_date"/>
        <ImageView
            android:layout_width="17dp"
            android:layout_toEndOf="@+id/txt_from_date"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            app:srcCompat="@drawable/ic_arrow_down"/>
    </RelativeLayout>

</LinearLayout>
        <LinearLayout
            android:layout_toStartOf="@+id/layout_submit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_toEndOf="@+id/from_date_layout"
            android:padding="@dimen/_2sdp"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="@string/to"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/select_to_date"
                android:layout_marginTop="@dimen/_5sdp">
                <TextView
                    android:id="@+id/txt_to_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:text="@string/select_date"/>
                <ImageView
                    android:layout_width="17dp"
                    android:layout_toEndOf="@+id/txt_to_date"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    app:srcCompat="@drawable/ic_arrow_down"/>
            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/layout_submit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_centerVertical="true"

            android:background="@drawable/round_white_background">

            <ImageView
              android:id="@+id/img_submit"
              android:layout_width="@dimen/_30sdp"
              android:layout_height="@dimen/_30sdp"
              android:layout_centerVertical="true"
              android:layout_marginStart="@dimen/_2sdp"
              android:padding="@dimen/_5sdp"
              app:srcCompat="@drawable/arraow_color" />
            <ImageView
                android:id="@+id/img_reset"
                android:visibility="gone"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_5sdp"
              android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_icon"
               />

        </RelativeLayout>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/layout_select_date"
        android:id="@+id/view_invoiceList"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/view_transactions"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/layout_select_date"
      android:layout_marginLeft="@dimen/_20sdp"
      android:layout_marginTop="@dimen/_10sdp"
      android:layout_marginRight="@dimen/_20sdp"
      android:layout_marginBottom="@dimen/_40sdp" />
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_below="@+id/layout_select_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_30sdp"
        android:indeterminateTint="@color/back_color"
        android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>