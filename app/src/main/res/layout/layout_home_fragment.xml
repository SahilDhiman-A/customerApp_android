<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/back_color"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_60sdp"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/rl_greeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_greeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spectra_regular"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    tools:text="Good AfterNoon" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_user_and_can"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_greeting"
                    android:drawableEnd="@drawable/ic_arrow_white"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableTint="@color/bitter_sweet"
                    android:fontFamily="@font/helvetica"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    tools:text="Rohit Behl (109676787)" />


                <androidx.appcompat.widget.AppCompatImageView
                  android:id="@+id/ivSearch"
                  android:layout_width="@dimen/_18sdp"
                  android:layout_height="@dimen/_18sdp"
                  android:layout_marginEnd="@dimen/_10sdp"
                  android:layout_toStartOf="@+id/rlNotification"
                  android:src="@drawable/ic_search"
                  android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/rlNotification"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_alignParentEnd="true">

                    <ImageView
                      android:id="@+id/ivNotification"
                      android:layout_width="@dimen/_18sdp"
                      android:layout_height="@dimen/_18sdp"
                      android:layout_alignParentEnd="true"
                      android:visibility="visible"
                      app:srcCompat="@drawable/ic_notification" />

                    <ImageView
                        android:id="@+id/ivNotificationDot"
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="@dimen/_8sdp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/round_background_color"
                        android:visibility="visible" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_viewpager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:layout_below="@+id/rl_greeting"
                android:layout_marginTop="@dimen/_5sdp"
                android:isScrollContainer="true">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp" />

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_5sdp"
                    android:layout_below="@+id/view_banner"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_10sdp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_graph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_viewpager"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_5sdp">

                <RelativeLayout
                    android:id="@+id/layout_data_pump"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_data"
                        android:layout_width="131dp"
                        android:layout_height="151dp"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@drawable/ic_data_total_used" />

                    <View
                        android:id="@+id/view_full"
                        android:layout_width="75dp"
                        android:layout_height="95dp"
                        android:layout_marginStart="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_28sdp"
                        android:background="@color/white" />

                    <RelativeLayout
                        android:id="@+id/view_data"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_28sdp"
                        android:background="#D9645E" />

                    <TextView
                      android:id="@+id/layout_view_details"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/img_data"
                      android:layout_marginStart="@dimen/_10sdp"
                      android:fontFamily="@font/helvetica_neu_bold"
                      android:text="@string/view_details"
                      android:textAllCaps="true"
                      android:textColor="@color/white"
                      android:textSize="14sp"
                      android:textStyle="bold" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_unlimited"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_toEndOf="@+id/layout_data_pump"
                    android:fontFamily="@font/helvetica_neue_light"
                    android:text="@string/unlimited_data"
                    android:textColor="@color/back_color"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/layout_dataWarning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:layout_toEndOf="@+id/layout_data_pump"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/dataWarning"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/upgradePlan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text="@string/topup"

                        android:textColor="@color/back_color"
                        android:textSize="16sp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layout_data_limited"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_50sdp"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/layout_data_used"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/data_left"
                            android:textColor="@color/back_color"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt_data_used"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_data_used"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/out_of"
                            android:textColor="@color/back_color"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt_total_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_spectra_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_toEndOf="@+id/layout_data_pump"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_spectra_voice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:drawableEnd="@drawable/arraow_color"
                        android:fontFamily="@font/helvetica_neu_bold"
                        android:lineSpacingExtra="@dimen/_5sdp"
                        android:text="Get\nSpectra \nVoice"
                        android:textAllCaps="true"
                        android:textColor="@color/bitter_sweet"
                        android:textSize="16sp"
                        android:visibility="gone" />

                </LinearLayout>


            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_outstanding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_graph"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="#ffffff"
                app:cardCornerRadius="@dimen/_15sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:orientation="vertical"
                        android:padding="@dimen/_4sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_outstanding_amount"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt_outstanding_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text=""
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_due"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/due_on"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/txt_due_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:text=""
                                android:textColor="@color/back_color"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                      android:id="@+id/btn_pay_now"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentEnd="true"
                      android:layout_centerVertical="true"
                      android:layout_gravity="end"
                      android:layout_marginStart="@dimen/_10sdp"
                      android:layout_marginEnd="@dimen/_10sdp"
                      android:layout_marginBottom="@dimen/_10sdp"
                      android:background="@drawable/login_background"
                      android:drawableEnd="@drawable/ic_arrow_white"
                      android:drawablePadding="@dimen/_10sdp"
                      android:fontFamily="@font/helvetica_neu_bold"
                      android:paddingStart="@dimen/_14sdp"
                      android:paddingTop="@dimen/_7sdp"
                      android:paddingEnd="@dimen/_14sdp"
                      android:paddingBottom="@dimen/_7sdp"
                      android:text="@string/pay_now"
                      android:textAllCaps="true"
                      android:textColor="@color/white"
                      android:textSize="12sp"
                      tools:text="Pay in Advance" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_sr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_outstanding"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:background="#ffffff"
                app:cardCornerRadius="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_15sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.80"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="@string/sr_number"
                                android:textColor="@color/txt_mobile_number"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txt_sr_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                            <TextView

                                android:id="@+id/txt_estimated_time_dummy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:text="@string/expected_resolution_time"
                                android:textColor="@color/txt_mobile_number"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txt_estimated_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.20"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="@string/created_on"
                                android:textColor="@color/txt_mobile_number"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txt_ticket_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:text="@string/status"
                                android:textColor="@color/txt_mobile_number"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/txt_status"
                                android:layout_width="wrap_content"
                                android:layout_height="22dp"
                                android:layout_gravity="start"
                                android:layout_marginTop="@dimen/_5sdp"
                                app:srcCompat="@drawable/ic_in_progress" />
                        </LinearLayout>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/view_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/_30sdp"
                        android:background="@drawable/login_background"
                        android:drawableEnd="@drawable/ic_arrow_white"
                        android:drawablePadding="@dimen/_15sdp"
                        android:paddingStart="@dimen/_19sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_19sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="@string/view_all"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </ScrollView>

    <include
        layout="@layout/no_internet"
        android:visibility="gone" />
</RelativeLayout>