<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <include layout="@layout/no_internet"/>
    <include layout="@layout/toolbar_head"
        android:visibility="gone"
        />

    <androidx.appcompat.widget.Toolbar
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/colorPrimaryDark"
        android:visibility="visible"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/toolbar_head">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_back_btn"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:layout_marginTop="@dimen/_2sdp"
                app:srcCompat="@drawable/ic_expand_button"/>

            <TextView
                android:id="@+id/txt_service"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/change_plan"
                android:fontFamily="@font/spectra_regular"
                android:layout_marginStart="@dimen/_25sdp"
                android:textSize="24sp"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/view_change_data"
        android:layout_below="@+id/toolbar_head"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/view_change_plan"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_14sdp"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/lay_compare"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
          android:id="@+id/lay_compare"
          android:layout_width="match_parent"
          android:layout_height="@dimen/_50sdp"
          android:layout_alignParentBottom="true"
          android:background="@color/timer_color"
          android:orientation="vertical">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginTop="@dimen/_15sdp"
              android:text="@string/compare_plan"
              android:textColor="@color/white"
              android:textSize="@dimen/btn_text" />

            <View
              android:layout_width="@dimen/_70sdp"
              android:layout_height="@dimen/_2sdp"
              android:layout_gravity="center"
              android:layout_marginTop="@dimen/_10sdp"
              android:background="@drawable/band_background_grey" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:indeterminateTint="@color/back_color"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

   <include layout="@layout/inflate_know_more" />
</RelativeLayout>