<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:id="@+id/rlMian"
        android:background="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:padding="@dimen/_7sdp"
            android:layout_marginStart="@dimen/_10sdp"

            app:srcCompat="@drawable/ic_expand_button"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/txt_invoice_detail"
            android:layout_toEndOf="@+id/img_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_toStartOf="@+id/txt_share"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="@string/invoice_detail"
            android:textSize="24sp"
            android:fontFamily="@font/spectra_regular"
            android:textColor="@color/white"/>

        <TextView
          android:id="@+id/txt_share"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_centerVertical="true"
          android:layout_marginEnd="@dimen/_10sdp"
          android:padding="@dimen/_10sdp"
          android:text="@string/share"
          android:textColor="@color/white"
          android:textSize="@dimen/_11sdp" />

    </RelativeLayout>


    <com.github.barteksc.pdfviewer.PDFView
      android:id="@+id/pdfview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/rlMian"
      android:layout_marginStart="@dimen/_minus50sdp"
      android:layout_marginEnd="@dimen/_minus50sdp" />
<!--    <com.joanzapata.pdfview.PDFView-->
<!--        android:id="@+id/pdfview"-->
<!--        android:layout_marginStart="@dimen/_minus50sdp"-->
<!--        android:layout_marginEnd="@dimen/_minus50sdp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_below="@+id/rlMian"-->
<!--        android:layout_height="match_parent"/>-->

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_30sdp"
        android:indeterminateTint="@color/back_color"
        android:layout_centerInParent="true"/>
</RelativeLayout>