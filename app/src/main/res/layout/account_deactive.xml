<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlAcountDeactive"
    android:visibility="gone"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">
    <TextView
        android:id="@+id/topMeassge"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:padding="@dimen/_20sdp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:text="Your account is currently Barred due to nonpayment of your dues/pending payment."
        android:textColor="#ffffff"
        android:textSize="@dimen/sub_header_text" />
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/dial_background"
        android:padding="@dimen/_18sdp">

        <TextView
            android:id="@+id/tvSelectOptTitle"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Your account is deactivate since 02/14/02. Would you like to reactivate it ?"
            android:textColor="#3D3D3D"
            android:textSize="@dimen/sub_header_text" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp">


            <TextView
                android:id="@+id/tvNo"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/login_background"
                android:drawableEnd="@drawable/ic_arrow_white"
                android:padding="@dimen/_10sdp"
                android:text="No"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/btn_text" />

            <TextView
                android:id="@+id/tvYes"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/login_background"
                android:drawableEnd="@drawable/ic_arrow_white"
                android:padding="@dimen/_10sdp"
                android:text="Yes"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/btn_text" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>