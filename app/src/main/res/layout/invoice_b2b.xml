<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_13sdp"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_mobile"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#ffffff"
        app:cardCornerRadius="@dimen/_15sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp">


            <LinearLayout
                android:id="@+id/layout_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="start"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="@string/invoice_no"/>
                        <TextView
                            android:id="@+id/invoice_number"
                            android:layout_width="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/login_txt"
                            android:text=""/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/invoice_period"/>
                <TextView
                    android:id="@+id/invoice_period"
                    android:layout_width="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/login_txt"
                    android:text=""/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/opening_amt"/>
                <TextView
                    android:id="@+id/opening_amount"
                    android:layout_width="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/login_txt"
                    android:text=""/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/payment_incl_adj"/>
                <TextView
                    android:id="@+id/payment"
                    android:layout_width="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/login_txt"
                    android:text=""/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/unpaid_amt"/>
                <TextView
                    android:id="@+id/unpaid_amount"
                    android:layout_width="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/login_txt"
                    android:text=""/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_40sdp"
                android:orientation="vertical"
                tools:ignore="RelativeOverlap">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textSize="12sp"
                    android:text="@string/invoice_date"/>
                <TextView
                    android:id="@+id/invoice_date"
                    android:layout_width="wrap_content"
                    android:layout_gravity="start"
                    android:textColor="@color/login_txt"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:text=""/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/_15sdp"
                   />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="start"
                    android:textColor="@color/login_txt"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                   />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/invoice_amt"/>
                <TextView
                    android:id="@+id/invoice_amount"
                    android:layout_width="wrap_content"
                    android:layout_gravity="start"
                    android:textColor="@color/login_txt"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:text=""/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:textSize="12sp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="@string/tds_amt"/>
                        <TextView
                            android:id="@+id/tds_amount"
                            android:layout_width="wrap_content"
                            android:layout_gravity="start"
                            android:textColor="@color/login_txt"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:text=""/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:textSize="12sp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="@string/due_date"/>
                        <TextView
                            android:id="@+id/due_date"
                            android:layout_width="wrap_content"
                            android:layout_gravity="start"
                            android:textColor="@color/login_txt"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:text=""/>

                    </LinearLayout>
                <RelativeLayout
                    android:layout_below="@+id/layout_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/view_invoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view"
                        android:textAllCaps="true"
                        android:drawableEnd="@drawable/ic_arrow_white"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingStart="@dimen/_17sdp"
                        android:paddingEnd="@dimen/_17sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:drawablePadding="@dimen/_15sdp"
                        android:background="@drawable/login_background"
                        tools:ignore="RelativeOverlap" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/pay_now_invoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pay_now"
                        android:textAllCaps="true"
                        android:drawableEnd="@drawable/ic_arrow_white"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingStart="@dimen/_17sdp"
                        android:paddingEnd="@dimen/_17sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:paddingBottom="@dimen/_8sdp"
                        android:drawablePadding="@dimen/_15sdp"
                        android:background="@drawable/login_background"
                        android:layout_marginStart="@dimen/_10sdp"
                        tools:ignore="RelativeOverlap" />
                </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>